{
  "name": "Notifier for ridibooks",
  "version": "0.0.0",
  "description": "Displays your ridibooks notifications unread count",
  "homepage_url": "https://github.com/cbcruk/ridification",
  "manifest_version": 2,
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "alarms",
    "storage",
    "notifications",
    "tabs",
    "cookies",
    "https://*.ridibooks.com/"
  ],
  "background": {
    "persistent": false,
    "scripts": ["browser-polyfill.min.js", "background.js"]
  },
  "browser_action": {
    "default_icon": "icon-toolbar-gray.png",
    "default_title": "ridibooks",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://ridibooks.com/*"],
      "js": ["auth.js"]
    }
  ]
}
